
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1532568547949-a09f1afe4d1b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80);">
  <div class="container">
    <h1 class="text-center" ><strong>Creative people</strong></h1>
  </div>
</div>

<div class="container py-5">
  <h1> Listas </h1>
  <div class="row justify-content-end"> <%= link_to "create", new_list_path(@list), :class => "btn btn-primary" %> </div>
  
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1622976479615-38700d470a1c?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=849&q=80)">
        <p> <%= link_to list.name, list_path(list), class: "text-white" %> </p>
      </div>
    <% end %>
  </div>
  
</div>
